{
  "name": "cloud-music-electron",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./electron/main.ts",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:build": "vite build && electron-builder",
    "dev": "concurrently -k \"pnpm start\" \"pnpm electron\"",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "commit": "git add . && git cz"
  },
  "build": {
    "appId": "com.rain.rainmusic",
    "productName": "RainMusic",
    "copyright": "Copyright Â© 2021 rain-music",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@types/node": "^20.8.6",
    "antd": "^5.10.1",
    "axios": "^1.5.1",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.17.0",
    "zustand": "^4.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.1.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.5.0",
    "wait-on": "^7.0.1"
  },
  "lint-staged": {
    "src/**/*.{css,scss}": [
      "prettier --write --parser css",
      "git add --all"
    ],
    "src/**/*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier --write",
      "git add --all"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  }
}
